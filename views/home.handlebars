<div class="row">
    <form class="col col-lg-6">
        <h2>Log in as an existing user</h2>
        <div class="row mb-3">
            <label for="loginUsername" class="form-label">User name:</label>
            <input id="loginUsername" type="text" class="form-control">
        </div>
        <div class="row mb-3">
            <label for="loginPassword" class="form-label">Password:</label>
            <input id="loginPassword" type="password" class="form-control">
        </div>
        <div class="row mb-3">
            <button id="loginSubmit" type="submit" class="btn">Log In</button>
        </div>
        <p id="loginFormFeedback" class="form-text"></p>
    </form>
    <form class="col col-lg-6">
        <h2>Sign up</h2>
        <div class="row mb-3">
            <label for="signupUsername" class="form-label">User name:</label>
            <input id="signupUsername" type="text" class="form-control">
        </div>
        <div class="row mb-3">
            <label for="signupPassword" class="form-label">Password:</label>
            <input id="signupPassword" type="password" class="form-control">
        </div>
        <div class="row mb-3">
            <button id="signupSubmit" type="submit" class="btn">Sign Up</button>
        </div>
        <p id="signupFormFeedback" class="form-text"></p>
    </form>
</div>