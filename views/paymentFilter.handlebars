<h4 id="id-user"> Good {{timeOfDays}}, {{toUpperCase username}} </h4> 
<div class="list-group1">
  <div class="col-md-9 col-lg-8 col-xl-7 col-xxl-6 payment-box">
      <div class="g-col-6 h23">
        <h2 class="picker-d" >Payment History</h2>
        <h3 id="picker-date" class="picker-d"></h3>
      </div>
        {{#if payments}}
          {{#each payments}}
            <div class="col">
              <p class="p-up-payments">Your last payment for {{bill.description}} was for ${{this.paid_amount}} on {{ this.payment_date}}</p>
            </div>
            {{/each}}
          {{else}}
          <div class="col">
              <p class="p-up-payments">No payments found on this period</p>
          </div>
        {{/if}}
       
      
        <button type="button" class="btn btn-success" id="new-payment2">Add a new payment</button>
    </div>
  </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script src="/js/filterScript.js"></script> 


